<h1>各研究室アドレス範囲</h1>
<!--<h1>IPアドレス割当一覧</h1>-->

<table>
  <tr>
    <th>管理者</th>
    <th>ネットワークアドレス</th>
    <th>ネットワークマスク</th>
    <th colspan=3></th>
  </tr>

<% @networks.each do |network| %>
  <tr>
    <td><%=h network.user.display_name %></td>
    <td><%=h network.netaddr %></td>
    <td><%=h network.netmask %></td>
    <td><%= link_to '詳細', network %></td>
    <td><%= link_to '編集', edit_network_path(network) %></td>
    <td><%= link_to '削除', network, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if controller.admin_user? %>
<%= link_to '新規IPアドレス割当作成', new_network_path %>
<% end %>
