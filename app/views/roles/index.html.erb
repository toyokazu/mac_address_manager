<h1>ロール一覧</h1>

<table>
  <tr>
    <th>ロール識別子</th>
    <th>ロール名</th>
    <th colspan=3></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.name %></td>
    <td><%=h role.display_name %></td>
    <td><%= link_to '詳細', role %></td>
    <td><%= link_to '編集', edit_role_path(role) %></td>
    <td><%= link_to '削除', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新規ロール作成', new_role_path %>
